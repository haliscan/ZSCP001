<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:smartField="sap.ui.comp.smartfield"
>
	<Dialog title="{i18n>searchHelpWerks}">
		<content>
			<VBox class="sapUiSmallMarginBegin">
				<Label
					text="{i18n>werks}"
					width="95%"
					textAlign="Center"
				/>
				<smartField:SmartField
					width="95%"
					textAlign="Center"
					value="{Werks}"
					editable="true"
					innerControlsCreated="onInnerControlsCreated"
				/>
			</VBox>
		</content>
		<buttons>
			<Button
				text="{i18n>add}"
				press="handlePressWerksDialogAdd"
				icon="sap-icon://add"
				type="Accept"
			/>
			<Button
				text="{i18n>cancel}"
				press="handlePressWerksDialogClose"
				icon="sap-icon://decline"
				type="Reject"
			/>
		</buttons>
	</Dialog>
</c:FragmentDefinition>