<c:FragmentDefinition xmlns="sap.m" xmlns:c="sap.ui.core" xmlns:smartField="sap.ui.comp.smartfield">
	<Dialog title="{i18n>searchHelpPyp}">
		<content>
			<VBox class="sapUiSmallMarginBegin">
				<Label text="{i18n>pyp}" width="95%" textAlign="Center"/>
				<smartField:SmartField width="95%" textAlign="Center" value="{Pyp}" editable="true" change="onValueChangePypSh"
					innerControlsCreated="onInnerControlsCreated">
					<smartField:configuration>
						<smartField:Configuration preventInitialDataFetchInValueHelpDialog="false"/>
					</smartField:configuration>
				</smartField:SmartField>
			</VBox>
		</content>
		<buttons>
			<Button text="{i18n>add}" press="handlePressPypDialogAdd" icon="sap-icon://add" type="Accept"/>
			<Button text="{i18n>cancel}" press="handlePressPypDialogClose" icon="sap-icon://decline" type="Reject"/>
		</buttons>
	</Dialog>
</c:FragmentDefinition>