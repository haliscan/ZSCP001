<core:FragmentDefinition 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:l="sap.ui.layout">
	<Dialog 
		title="{/TitleUretimyeri}"
		contentWidth="50%">
		<fb:FilterBar 
			search="handleSearchUretimyeri"
			showFilterConfiguration="false">
			<fb:filterGroupItems>
				<fb:FilterGroupItem 
					groupName="G1"
					name="UretimYeri"
					visibleInFilterBar="true"
					label="{i18n>filterUretimYeri}">
					<fb:control>
						<Input 
							value="{/Werks}"
							maxLength="10"
							submit="handleSearchUretimyeri"/>
					</fb:control>
				</fb:FilterGroupItem>
				<fb:FilterGroupItem 
					groupName="G1"
					name="Tanim"
					visibleInFilterBar="true"
					label="{i18n>filterTanim}">
					<fb:control>
						<Input 
							value="{/Name1}"
							maxLength="30"
							submit="handleSearchUretimyeri" />
					</fb:control>
				</fb:FilterGroupItem>
			</fb:filterGroupItems>
		</fb:FilterBar>
		<Table 
			id="idTableUretimyeri"
			width="auto"
			items="{odata_service>/WerksListSet}"
			noDataText="{i18n>noDataTextKayitBulunamadi}"
            growing="true"
			class="sapUiResponsiveMargin">
			<columns>
				<Column
					width="100px">
					<Text text="{i18n>columnUretimYeri}"/>
				</Column>
				<Column 
					demandPopin="true" 
					popinDisplay="Inline" 
					minScreenWidth="400px">
					<Text text="{i18n>columnTanim}"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem 
					type="Active"
					press="handleSelectedUretimyeri">
					<cells>
						<Text text="{odata_service>Werks}"/>
						<Text text="{odata_service>Name1}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		<endButton>
			<Button 
				text="{i18n>buttonKapat}"
				type="Reject"
				icon="sap-icon://sys-cancel"
				press="handlePressKapatUretimyeri"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>
